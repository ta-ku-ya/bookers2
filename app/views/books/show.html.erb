<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
<%= render 'user info', books: @books, user: @user %>
</div>
<div class=" contaoner">
 <div class="row">
  <div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table>

   <tbody>
    <tr>
     <td>
      <%= link_to user_path(@user.id) do %>
      <%= image_tag @user.get_profile_image(100,100) %>
      <%= @user.name %>
      <% end %>
     </td>
     <td><%= link_to @book.title %></td>
     <td><%= @book.body %></td>
     <% if @book.user == current_user %>
     <td><div class="btn btn-sm btn-success"><%= link_to "Edit", edit_book_path(@book.id) %></div></td>
     <td>
     <div class="btn btn-sm btn-danger">
      <%= link_to "Destroy", book_path(@book.id), method: :delete %></div></td>
         <% end %>
    </tr>
   </tbody>
</table>
</div>
